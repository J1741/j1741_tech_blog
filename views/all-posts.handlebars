<div class="container">
  <div class="post-column d-flex">
    {{#each posts as |post| }}
      {{!-- Bootstrap card --}}
      <div class="card" style="max-width: 40rem;">
        <div class="card-header bg-dark">
          {{post.title}}  
        </div>
        <div class="card-body">
          <p class="card-text">{{post.content}}</p>
          <p class="card-subtitle mb-2 text-muted">Posted by {{post.user.username}} on {{format_date post.date_created}}</h6>
        </div>
      </div>
    {{/each}}
</div>
</div>